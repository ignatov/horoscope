# Example environment file
# Copy this file to .env and fill in your API key

# Anthropic API Key for Claude
ANTHROPIC_API_KEY=your_api_key_here

# Optional: Set debug mode (True/False)
DEBUG=False

# Optional: Custom port for the application
# PORT=5001

# Optional: Proxy URL for connection to Anthropic API
# Use this if you have connection issues or need to use a proxy
# Examples:
# PROXY_URL=http://user:password@proxy-server:port
# PROXY_URL=socks5://proxy-server:port

# PROXY_URL=

# Optional: Connection timeout in seconds (default is 10)
# CONNECTION_TIMEOUT=30